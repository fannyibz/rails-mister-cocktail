<div class="navbar">
  <h1>Cocktails List</h1>
  <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-ghost"  %>
</div>

<div class="container-cards">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-6 col-md-4">
          <% if cocktail.photo.present? %>
            <div class="card-category mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url(<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>)">
              <%= link_to cocktail.name, cocktail_path(cocktail)  %>
            </div>
          <% else %>
            <div class="card-category mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url(<%= image_path("mojito.jpg")  %>)">
              <%= link_to cocktail.name, cocktail_path(cocktail)  %>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
